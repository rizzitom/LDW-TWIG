{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Liste des Utilisateurs</h2>

    <!-- Tableau des Utilisateurs -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Rôle</th>
                </tr>
            </thead>
            <tbody>
                {% for u in liste %}
                    <tr>
                        <td>{{ u.email }}</td>
                        <td>{{ u.nom }}</td>
                        <td>{{ u.prenom }}</td>
                        <td>{{ u.libellerole }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <h2 class="mt-5">Ajouter un Utilisateur</h2>
    <form method="post">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" value="{{ form.inputEmail ?? '' }}" required>
        </div>
        <div class="mb-3">
            <label for="inputNom" class="form-label">Nom</label>
            <input type="text" id="inputNom" name="inputNom" class="form-control" value="{{ form.inputNom ?? '' }}" required>
        </div>
        <div class="mb-3">
            <label for="inputPrenom" class="form-label">Prénom</label>
            <input type="text" id="inputPrenom" name="inputPrenom" class="form-control" value="{{ form.inputPrenom ?? '' }}" required>
        </div>
        <div class="mb-3">
            <label for="inputRole" class="form-label">Rôle</label>
            <select id="inputRole" name="inputRole" class="form-select" required>
                <option value="1" {% if form.inputRole == 1 %}selected{% endif %}>Administrateur</option>
                <option value="2" {% if form.inputRole == 2 %}selected{% endif %}>Utilisateur</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="inputPassword" class="form-label">Mot de passe</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="inputPasswordConfirm" class="form-label">Confirmer le mot de passe</label>
            <input type="password" id="inputPasswordConfirm" name="inputPasswordConfirm" class="form-control" required>
        </div>
        <button type="submit" name="btAjouterUtilisateur" class="btn btn-primary">Ajouter</button>
    </form>
    </div>
{% endblock %}
